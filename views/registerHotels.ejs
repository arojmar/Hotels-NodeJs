<!DOCTYPE html>
<html>
  <head>
    <title>Form view.ejs</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <% include head.ejs %>
  </head>
  <body>
    <header class="pb-4">
      <% include header.ejs %>
    </header>
    <main>
      <div class="container">
        <h1>Hotel Form</h1>
        <div class="row">
          <div class="col-6">
            <form action="/hotels/saveHotel" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label for="exampleInputHotelName1">Name</label>
                <input type="text" name="hotelName" class="form-control"
                 aria-describedby="emailHelp" required>
              </div>
              <div class="form-group">
                <label for="exampleInputHotelAddress1">Address</label>
                <input type="text" name="hotelAddress" class="form-control" id="exampleInputHotelAddress1">
              </div>
              <div class="form-group">
                <label for="exampleInputHotelPhone1">Phone</label>
                <input type="text" name="hotelPhone" class="form-control" id="exampleInputHotelPhone1">
              </div>
              <div class="form-group">
                <label for="exampleInputHotelImage1">Image</label>
                <input type="file" name="hotelImage" class="form-control" id="exampleInputHotelImage1">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </main>
    <% include footer.ejs %>
  </body>
</html>
